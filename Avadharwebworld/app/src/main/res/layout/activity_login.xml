<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layour_login"
    android:foreground="@drawable/backgroud_transparent"
    android:clickable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/logobackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:src="@drawable/logoavadhar" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo"
            android:layout_marginEnd="48dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="48dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="40dp"
            android:background="@color/backgroundwhite"
            android:drawableLeft="@drawable/person"
            android:ems="10"
            android:hint="Email/Username"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/et_username"
            android:layout_alignLeft="@+id/et_username"
            android:layout_alignRight="@+id/et_username"
            android:layout_alignStart="@+id/et_username"
            android:layout_below="@+id/et_username"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@color/backgroundwhite"
            android:drawableLeft="@drawable/lock"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_corner"
            android:text="@string/Login"
            android:textColor="@color/backgroundwhite"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/t_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/forgot_password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/backgroundwhite"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_signup"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/btn_corner"
            android:text="@string/signup"
            android:textColor="@color/backgroundwhite"
            android:textSize="20dp" />

    </RelativeLayout>
</FrameLayout>