<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/myImageView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/profileid"
                android:inputType="textEmailAddress"
                android:id="@+id/et_matrimony_searchfilter_profileid"
                app:met_floatingLabel="normal" />
            <TextView
                android:text="@string/lookingfor"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rg_matrimony_searchfilter_modeofmatri"
                android:layout_weight="0.02">

                <RadioButton
                    android:text="@string/bride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_matrimony_searchfilter_bride"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="@string/groom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_matrimony_searchfilter_groom"
                    android:layout_weight="1" />


            </RadioGroup>
            <TextView
                android:text="@string/familyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_searchfilter_familytype"
                android:spinnerMode="dialog"
                android:entries="@array/familytype"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/maritialstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_searchfilter_maritialstatus"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                android:entries="@array/maritialstatus"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/physicalstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_searchfilter_physicalstatus"
                android:spinnerMode="dialog"
                android:entries="@array/physicalstatus"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/country"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_search_postadd_country"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/state"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_search_postadd_state"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/city"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_search_postadd_city"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_searchfilter_religion"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/caste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_searchfilter_caste"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/typeofjathakam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_searchfilter_typeofjathakam"
                android:spinnerMode="dialog"
                android:entries="@array/typeofjathakam"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrimony_searchfilter_star"
                android:spinnerMode="dialog"
                android:entries="@array/malayalamstar"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />


            <Button
                android:text="@string/searchfilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_matrimony_searchlayput_filter"
                android:layout_weight="0.08" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

