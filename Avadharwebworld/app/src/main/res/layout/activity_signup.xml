<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logobackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avadharwebworld.avadhar.Activity.signup">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:id="@+id/logo"
        android:layout_centerInParent="true"
        android:src="@drawable/logoavadhar"
        android:layout_alignParentTop="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/signup"
        android:textColor="@color/backgroundwhite"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:hint="Email"
            android:background="@color/backgroundwhite"
            android:id="@+id/et_email"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="30dp" >
            <requestFocus/>
            </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="text"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:hint="Username"
            android:background="@color/backgroundwhite"
            android:id="@+id/et_username"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/et_email"
            android:layout_alignLeft="@+id/et_email"
            android:layout_alignStart="@+id/et_email"
            android:layout_alignRight="@+id/et_email"
            android:layout_alignEnd="@+id/et_email"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.00" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="@color/textcolor"
            android:hint="Password"
            android:background="@color/backgroundwhite"
            android:id="@+id/et_password"
            android:layout_alignLeft="@+id/et_username"
            android:layout_alignStart="@+id/et_username"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/et_username"
            android:layout_alignEnd="@+id/et_username"
            android:layout_alignTop="@+id/et_username"
            android:layout_weight="0.00"
          />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00">
            <Spinner
                android:layout_width="87dp"
                android:layout_height="38dp"
                android:id="@+id/sp_countrycode"
                android:layout_alignLeft="@+id/atv_city"
                android:layout_alignStart="@+id/atv_city"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/atv_city"
                android:textColor="@color/textcolor"
                android:spinnerMode="dialog"
                android:ems="10"
                android:background="@color/backgroundwhite"
                android:layout_alignRight="@+id/logo"
                android:layout_alignEnd="@+id/logo"
                android:windowSoftInputMode="adjustResize"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="phone"
                android:ems="10"
                android:windowSoftInputMode="adjustResize"
                android:hint="Mobile"
                android:id="@+id/et_phone"
                android:background="@color/backgroundwhite"
                android:textColor="@color/textcolor"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:text="@string/create"
        android:background="@drawable/btn_corner"
        android:textColor="@color/backgroundwhite"
        android:id="@+id/btn_create"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_alignRight="@+id/logo"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_marginTop="280dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_question"
        android:id="@+id/tv_already"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:textColor="@color/backgroundwhite"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text"
        android:textColor="@color/login"
        android:id="@+id/tv_login"
        android:layout_marginLeft="220dp"
        android:layout_alignParentBottom="true"
         />

</RelativeLayout>
