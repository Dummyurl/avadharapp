<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avadharwebworld.avadhar.Activity.BuyandsellEditPost">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView
                android:text="@string/typeofuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rg_buyandsell_editpost_type"
                android:layout_weight="0.02">

                <RadioButton
                    android:text="@string/buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_buyandsell_editpost_buyer"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="@string/seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_buyandsell_editpost_seller"
                    android:layout_weight="1" />


            </RadioGroup>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:id="@+id/et_buyandsell_editpost_title"
                app:met_floatingLabel="normal" />
            <TextView
                android:text="@string/category"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_editpost_category"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/subcategory"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_editpost_subcategory"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/year"
                android:id="@+id/et_buyandsell_editpost_year"
                app:met_floatingLabel="normal" />

            <TextView
                android:text="@string/fuel"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_buyandsell_editpost_fuel"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_editpost_fuel"
                android:spinnerMode="dialog"
                android:entries="@array/fuel"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/kmdriven"
                android:id="@+id/et_buyandsell_editpost_kmdriven"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/colour"
                android:id="@+id/et_buyandsell_editpost_colour"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/price"
                android:id="@+id/et_buyandsell_editpost_price"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/buyandselldescrtiption"
                android:id="@+id/et_buyandsell_editpost_description"
                app:met_floatingLabel="normal" />

            <TextView
                android:text="@string/personaldetails"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/viewUnderline"></View>

            <TextView
                android:text="@string/youare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rg_buyandsell_editpost_usertype"
                android:layout_weight="0.02">

                <RadioButton
                    android:text="@string/indivitual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_buyandsell_editpost_indivitual"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="@string/dealer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_buyandsell_editpost_dealer"
                    android:layout_weight="1" />


            </RadioGroup>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:id="@+id/et_buyandsell_editpost_name"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:id="@+id/et_buyandsell_editpost_email"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contactmobile"
                android:id="@+id/et_buyandsell_editpost_contactno"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pincode"
                android:id="@+id/et_buyandsell_editpost_pincode"
                app:met_floatingLabel="normal" />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_editpost_country"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/state"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_editpost_state"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/city"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_editpost_city"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />

            <Button
                android:text="@string/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_buyandsell_editpost_save"
                android:layout_weight="0.08" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

