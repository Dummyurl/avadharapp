<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_job_post_resume"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="5dp"
    android:paddingRight="5dp"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_name"
                android:hint="@string/nameorcompany"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_mobile"
                android:hint="@string/contactNumber"
                app:met_floatingLabel="normal"
                android:layout_marginTop="2dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_address"
                android:hint="@string/companyemail"
                app:met_floatingLabel="normal"
                android:minLines="2"
                android:maxLines="3"
                android:layout_marginTop="2dp"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_jobtitile"
                android:hint="@string/jobtitle"
                app:met_floatingLabel="normal"

                android:layout_marginTop="2dp"/>
            <TextView
                android:text="@string/jobtype"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:textColor="@color/bb_darkBackgroundColor"
                android:layout_height="wrap_content"
                android:id="@+id/tv_jobpost_vacancy_profiledetails" />
            />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rg_jobpost_vacancy_type">

                <RadioButton
                    android:text="@string/jobfulltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_jobpost_vacancy_fulltime"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="@string/jobparttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_jobpost_vacancy_parttime"
                    android:layout_weight="1" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_qualification"
                android:hint="@string/qualification"
                app:met_floatingLabel="normal"

                android:layout_marginTop="2dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_jobpost_vacancy_jobcategory"
                android:spinnerMode="dialog"
                />
            <com.avadharwebworld.avadhar.Support.MultiSelectSpinner
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                android:layout_weight="0.08"
                android:prompt="@string/jobrole"
                android:layout_width="match_parent"
                android:id="@+id/sp_jobpost_vacancy_jobrole"/>
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_jobpost_vacancy_experiance"
                android:spinnerMode="dialog"
                android:entries="@array/experience"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_joblocation"
                android:hint="@string/joblocation"
                app:met_floatingLabel="normal"
                android:layout_marginTop="2dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_lastdate"
                app:met_floatingLabel="normal" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/noofvacnacy"
                android:inputType="numberDecimal"
                android:id="@+id/et_jobpost_vacancy_vacancyno"
                app:met_floatingLabel="normal" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_jobpost_vacancy_salary"
                android:spinnerMode="dialog"
                android:tag="@string/salary"
                android:entries="@array/salary"
                />

         <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/currentlocation"
                android:id="@+id/et_jobpost_vacancy_currentlocation"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_description"
                android:hint="@string/description"
                app:met_floatingLabel="normal"
                android:minLines="2"
                android:maxLines="3"
                android:layout_marginTop="2dp"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_jobpost_vacancy_agelimit"
                android:hint="@string/agelimit"
                app:met_floatingLabel="normal"
                android:inputType="numberDecimal"

                android:layout_marginTop="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:text="@string/uploadlogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_jobpost_vacancy_uploadlogo"
                android:layout_weight="1" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">
                <Button
                    android:text="@string/submit"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_jobpost_vacancy_submit"
                    android:layout_weight="1" />
            </LinearLayout>





</LinearLayout>
    </ScrollView>

</RelativeLayout>