<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_matrimony_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avadharwebworld.avadhar.Activity.MatrimonyRegistration">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">
                <TextView
                    android:text="@string/profilefor"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                     />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_profilefor"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:entries="@array/profilefor"
                    android:layout_weight="0.08" />
                <TextView
                    android:text="@string/privacycheck"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_matrimonyregistration_privacy" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rg_matrimonyregistration_modeofprovacy"
                    android:layout_weight="0.02">

                    <RadioButton
                        android:text="@string/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_matrimonyregistration_yes"
                        android:layout_weight="1" />
                    <RadioButton
                        android:text="@string/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_matrimonyregistration_no"
                        android:layout_weight="1" />


                </RadioGroup>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:id="@+id/et_matrimonyregistration_email"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/presentaddress"
                    android:inputType="textPostalAddress"
                    android:minLines="2"
                    android:maxLines="4"
                    android:id="@+id/et_matrimonyregistration_presentaddress"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:id="@+id/et_matrimonyregistration_name"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/communicationaddress"
                    android:inputType="textPostalAddress"
                    android:minLines="2"
                    android:maxLines="4"
                    android:id="@+id/et_matrimonyregistration_communicationaddress"
                    app:met_floatingLabel="normal" />
                <TextView
                    android:text="@string/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rg_matrimonyregistration_gender"
                    android:layout_weight="0.02">

                    <RadioButton
                        android:text="@string/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_matrimonyregistration_male"
                        android:layout_weight="1" />
                    <RadioButton
                        android:text="@string/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_matrimonyregistration_female"
                        android:layout_weight="1" />


                </RadioGroup>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/contactNumber"
                    android:inputType="numberDecimal"
                    android:id="@+id/et_matrimonyregistration_mobile"
                    app:met_floatingLabel="normal" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dateofbirth"
                    android:id="@+id/et_matrimonyregistration_dob"
                    app:met_floatingLabel="normal" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/landline"
                    android:inputType="numberDecimal"
                    android:id="@+id/et_matrimonyregistration_landline"
                    app:met_floatingLabel="normal" />

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_maritialstatus"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:entries="@array/maritialstatus"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_country"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"

                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_state"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"

                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_city"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"

                    android:layout_weight="0.08" />

                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_religion"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"

                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_caste"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"

                    android:layout_weight="0.08" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                android:text="@string/physicaldetails"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_bodytype"
                    android:spinnerMode="dialog"
                    android:entries="@array/bodytype"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_physicalstatus"
                    android:spinnerMode="dialog"
                    android:entries="@array/physicalstatus"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_complexion"
                    android:spinnerMode="dialog"
                    android:entries="@array/complexion"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_bloodgroup"
                    android:spinnerMode="dialog"
                    android:entries="@array/bloodgroup"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_weight"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_height"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_eatinghabit"
                    android:spinnerMode="dialog"
                    android:entries="@array/eatinghabit"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_drinkinghabit"
                    android:spinnerMode="dialog"
                    android:entries="@array/drinkinghabit"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_smokinghabit"
                    android:spinnerMode="dialog"
                    android:entries="@array/smokinghabit"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:text="@string/jobandeducationdetials"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_eployedin"
                    android:spinnerMode="dialog"
                    android:entries="@array/employedin"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_jobcategory"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/designation"
                    android:id="@+id/et_matrimonyregistration_designation"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/worklocation"
                    android:id="@+id/et_matrimonyregistration_worklocation"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/companyname"
                    android:id="@+id/et_matrimonyregistration_companyname"
                    app:met_floatingLabel="normal" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_monthlyincome"
                    android:spinnerMode="dialog"
                    android:entries="@array/monthlyincome"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_qualification"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fieldOfStudy"
                    android:id="@+id/et_matrimonyregistration_fieldofstudy"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/additionalqualification"
                    android:id="@+id/et_matrimonyregistration_additionqualification"
                    app:met_floatingLabel="normal" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:text="@string/familydetails"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_familytype"
                    android:spinnerMode="dialog"
                    android:entries="@array/familytype"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_familystatus"
                    android:spinnerMode="dialog"
                    android:entries="@array/familystatus"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <TextView
                    android:text="@string/familyMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <CheckBox
                            android:text="@string/father"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cb_matrimony_registration_father"
                            android:layout_weight="1" />

                        <CheckBox
                            android:text="@string/mother"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cb_matrimony_registration_mother"
                            android:layout_weight="1" />

                        <CheckBox
                            android:text="@string/brother"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cb_matrimony_registration_brother"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <CheckBox
                            android:text="@string/sister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cb_matrimony_registration_sister"
                            />

                        <CheckBox
                            android:text="@string/others"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cb_matrimony_registration_others"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:text="@string/horoscopedetails"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_star"
                    android:spinnerMode="dialog"
                    android:entries="@array/malayalamstar"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_typeofjathakam"
                    android:spinnerMode="dialog"
                    android:entries="@array/typeofjathakam"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_typeofrasi"
                    android:spinnerMode="dialog"
                    android:entries="@array/typeofrasi"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/birthplace"
                    android:id="@+id/et_matrimonyregistration_birthplace"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dobinmalayalam"
                    android:id="@+id/et_matrimonyregistration_dobinmalayalam"
                    app:met_floatingLabel="normal" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/BirthTime"
                    android:id="@+id/et_matrimonyregistration_birthtime"
                    app:met_floatingLabel="normal" />

                <Button
                    android:text="@string/uploadgrahanila"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_matrimony_registration_uploadgrahanila"
                    android:layout_weight="0.08" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:text="@string/partnerdetails"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:text="@string/agebetween"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_matrimonyregistration_agebetweenfrom"
                        android:spinnerMode="dialog"
                        android:layout_margin="2dp"
                        android:layout_weight="0.08" />
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_matrimonyregistration_agebetweento"
                        android:spinnerMode="dialog"
                        android:layout_margin="2dp"
                        android:layout_weight="0.08" />
                </LinearLayout>
                <TextView
                    android:text="@string/heightbetween"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_matrimonyregistration_heightbetweenfrom"
                        android:spinnerMode="dialog"
                        android:layout_margin="2dp"
                        android:layout_weight="0.08" />
                    <android.support.v7.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sp_matrimonyregistration_heightbetweento"
                        android:spinnerMode="dialog"
                        android:layout_margin="2dp"
                        android:layout_weight="0.08" />
                </LinearLayout>
                <TextView
                    android:text="@string/partnerpref"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <com.avadharwebworld.avadhar.Support.MultiSelectSpinner
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08"
                    android:layout_width="match_parent"
                    android:id="@+id/sp_matrimony_registration_jobposition"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/parterworklocation"
                    android:id="@+id/et_matrimonyregistration_partenrworklocation"
                    app:met_floatingLabel="normal" />
                <TextView
                    android:text="@string/MatchingStars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <com.avadharwebworld.avadhar.Support.MultiSelectSpinner
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:labelFor="@string/MatchingStars"
                    android:layout_weight="0.08"
                    android:layout_width="match_parent"
                    android:id="@+id/sp_matrimony_registration_matchingstar"/>
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_partnermaritialstatus"
                    android:spinnerMode="dialog"
                    android:layout_margin="2dp"
                    android:entries="@array/maritialstatus"
                    android:layout_weight="0.08" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nativelocation"
                    android:id="@+id/et_matrimonyregistration_nativelocation"
                    app:met_floatingLabel="normal" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_matrimonyregistration_preferedfamilystatus"
                    android:spinnerMode="dialog"
                    android:entries="@array/familystatus"
                    android:layout_margin="2dp"
                    android:layout_weight="0.08" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/exceptionandconcept"
                    android:id="@+id/et_matrimonyregistration_concept"
                    app:met_floatingLabel="normal" />

                <Button
                    android:text="@string/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_matrimony_registration_save"
                    android:layout_weight="0.08" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

