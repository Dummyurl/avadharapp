<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/hisstory_viewlay3"
    style="@style/myImageView">

    <TextView
        android:id="@+id/tv_hisstory3_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bb_darkBackgroundColor"
        android:textSize="20dp"
        android:text="" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.android.volley.toolbox.NetworkImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_hisstory3_view_image"
            android:layout_width="50dp"
            android:layout_gravity="left"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/logo"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:civ_border_color="#C2C2C2">
        </com.android.volley.toolbox.NetworkImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hisstory3_view_name"
                android:text=""
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hisstory3_time"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_hisstory3_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="3"/>

    <Button
        android:id="@+id/btn_hisstory3_readmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/readmore" />


</LinearLayout>