<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_real_estate_buypackage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.avadharwebworld.avadhar.Activity.RealestateBuyPackage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="@string/property"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_realestate_buypackage_property"
        android:spinnerMode="dialog"
        android:layout_margin="2dp"
        android:entries="@array/property"
         />
    <TextView
        android:text="@string/typeofproperty"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_realestate_buypackage_typeofproperty"
        android:spinnerMode="dialog"
        android:layout_margin="2dp"
         />

    <TextView
        android:text="@string/typeofuser"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_realestate_buypackage_typeofuser"
        android:spinnerMode="dialog"
        android:layout_margin="2dp"
        android:entries="@array/typeofuser"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/expectedprice"
        android:inputType="text"
        android:id="@+id/et_realestate_buypackage_price"
        app:met_floatingLabel="normal" />

    <TextView
        android:text="@string/typeofactivity"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_realestate_buypackage_typeofactivity"
        android:spinnerMode="dialog"
        android:layout_margin="2dp"
        android:entries="@array/typeofactivity"
        />
    <TextView
        android:text="@string/country"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_realestate_buypackage_country"
        android:spinnerMode="dialog"
        android:layout_margin="2dp"

        />
    <TextView
        android:text="@string/state"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_realestate_buypackage_state"
        android:spinnerMode="dialog"
        android:layout_margin="2dp"

     />
    <TextView
        android:text="@string/city"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_realestate_buypackage_city"
        android:spinnerMode="dialog"
        android:layout_margin="2dp"
 />

    <TextView
        android:text="@string/selectplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rg_realestate_buypackage_plan"
        >

        <RadioButton
            android:text="@string/silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_realestate_buypackage_silver"
            android:layout_weight="1" />
        <RadioButton
            android:text="@string/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_realestate_buypackage_gold"
            android:layout_weight="1" />

        <RadioButton
            android:text="@string/diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_realestate_buypackage_diamond"
            android:layout_weight="1" />

    </RadioGroup>
    </LinearLayout>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_realestate_buypackage_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/moreaboutproperty"
        android:inputType="text"
        app:met_floatingLabel="normal" />


    <Button
        android:text="@string/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_realestate_buypackage_save"
        android:layout_weight="0.08" />

</LinearLayout>
    </ScrollView>
</RelativeLayout>