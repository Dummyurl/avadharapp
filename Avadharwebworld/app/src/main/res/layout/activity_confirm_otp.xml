<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/logobackground"
    tools:context="com.avadharwebworld.avadhar.Activity.ConfirmOtp">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"

        android:id="@+id/btn_confirm"
        android:background="@drawable/btn_corner"
        android:textColor="@color/backgroundwhite"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_confirmOtp"
        android:layout_marginTop="65dp">


        <EditText
            android:layout_width="10dp"
            android:textColor="@color/backgroundwhite"
            android:layout_height="45dp"
            android:textSize="35dp"
            android:inputType="number"
            android:gravity="center"
            android:id="@+id/et_otp1"
            android:maxLength="1"
            android:background="@drawable/confirm_edittext"
            android:layout_weight="1" />

        <EditText
            android:layout_width="10dp"
            android:textColor="@color/backgroundwhite"
            android:layout_height="45dp"
            android:maxLength="1"
            android:inputType="number"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_otp2"
            android:background="@drawable/confirm_edittext"
            android:layout_weight="1" />
        <EditText
            android:layout_width="10dp"
            android:textColor="@color/backgroundwhite"
            android:layout_height="45dp"
            android:textSize="35dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_otp3"
            android:maxLength="1"
            android:background="@drawable/confirm_edittext"
            android:layout_weight="1" />
        <EditText
            android:layout_width="10dp"
            android:layout_height="45dp"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/backgroundwhite"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_otp4"
            android:background="@drawable/confirm_edittext"
            android:layout_weight="1" />
        <EditText
            android:layout_width="10dp"
            android:layout_height="45dp"
            android:textColor="@color/backgroundwhite"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_otp5"
            android:textSize="35dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/confirm_edittext"
            android:layout_weight="1" />
        <EditText
            android:layout_width="10dp"
            android:layout_height="45dp"
            android:maxLength="1"
            android:textSize="35dp"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/backgroundwhite"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_otp6"
            android:background="@drawable/confirm_edittext"
            android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm OTP"
        android:id="@+id/tv_confirmOtp"
        android:textSize="30dp"
        android:textColor="@color/backgroundwhite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
</RelativeLayout>
