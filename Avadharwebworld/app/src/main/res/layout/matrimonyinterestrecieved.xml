<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    style="@style/myImageView">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
        <com.avadharwebworld.avadhar.Support.FeedImageView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:id="@+id/iv_matrimony_recieved_feed">
        </com.avadharwebworld.avadhar.Support.FeedImageView>

        <TextView
            android:text="dfsdfsdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="serif"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:maxWidth="200dp"
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/tv_matrimony_recieved_name" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_matrimony_recieved_favorite"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_favorite_black_24dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_matrimony_recieved_thump"
            android:src="@drawable/ic_thumb_up_black_18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/accept"
            android:id="@+id/btn_matrimony_recieved_accept"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/reject"
            android:id="@+id/btn_matrimony_recieved_reject"
           />
    </LinearLayout>
</LinearLayout>