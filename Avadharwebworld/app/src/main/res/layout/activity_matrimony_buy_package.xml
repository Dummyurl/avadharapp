<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.avadharwebworld.avadhar.Activity.MatrimonyBuyPackage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView
                android:text="@string/lookingfor"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/rg_matrymony_buypackage_modeofmatri"
                android:layout_weight="0.02">

                <RadioButton
                    android:text="@string/bride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_matrymony_buypackage_bride"
                    android:layout_weight="1" />
                <RadioButton
                    android:text="@string/groom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_matrymony_buypackage_groom"
                    android:layout_weight="1" />


            </RadioGroup>
            <TextView
                android:text="@string/familyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrymony_buypackage_familytype"
                android:spinnerMode="dialog"
                android:entries="@array/familytype"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/maritialstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrymony_buypackage_maritialstatus"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                android:entries="@array/maritialstatus"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/physicalstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrymony_buypackage_physicalstatus"
                android:spinnerMode="dialog"
                android:entries="@array/physicalstatus"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrymony_buypackage_religion"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/caste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrymony_buypackage_caste"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                android:layout_weight="0.08" />
            <TextView
                android:text="@string/typeofjathakam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrymony_buypackage_typeofjathakam"
                android:spinnerMode="dialog"
                android:entries="@array/typeofjathakam"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_matrymony_buypackage_star"
                android:spinnerMode="dialog"
                android:entries="@array/malayalamstar"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />
            <TextView
                android:text="@string/selectplan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rg_myatrimony_buypackage_buypackage_plan"
                    >

                    <RadioButton
                        android:text="@string/silver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_myatrimony_buypackage_buypackage_silver"
                        android:layout_weight="1" />
                    <RadioButton
                        android:text="@string/gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_myatrimony_buypackage_buypackage_gold"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="@string/diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_myatrimony_buypackage_buypackage_diamond"
                        android:layout_weight="1" />

                </RadioGroup>
            </LinearLayout>

            <Button
                android:text="@string/buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_matrimony_buypackage_save"
                android:layout_weight="0.08" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

