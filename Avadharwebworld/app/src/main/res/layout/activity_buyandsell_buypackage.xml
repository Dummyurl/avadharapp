<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_buy_and_sell_buypackage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.avadharwebworld.avadhar.Activity.BuyandsellBuypackage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="@string/type"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rg_buyandsell_buypackage_buyer">

                    <RadioButton
                        android:text="@string/buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_buyandsell_buypackage_buyer"
                        android:layout_weight="1" />
                    <RadioButton
                        android:text="@string/seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_buyandsell_buypackage_seller"
                        android:layout_weight="1" />
                </RadioGroup>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_buyandsell_buypackage_pricefrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pricefrom"
                android:inputType="number"
                app:met_floatingLabel="normal" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_buyandsell_buypackage_priceto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/priceto"
                android:inputType="number"
                app:met_floatingLabel="normal" />
        </LinearLayout>
            <TextView
                android:text="@string/country"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_buypackage_country"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                />
            <TextView
                android:text="@string/state"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_buypackage_state"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"

                />
            <TextView
                android:text="@string/city"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_buypackage_city"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                />
            <TextView
                android:text="@string/selectplan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/rg_buyandsell_buypackage_plan"
                    >

                    <RadioButton
                        android:text="@string/silver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_buyandsell_buypackage_silver"
                        android:layout_weight="1" />
                    <RadioButton
                        android:text="@string/gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_buyandsell_buypackage_gold"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="@string/diamond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_buyandsell_buypackage_diamond"
                        android:layout_weight="1" />

                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/viewUnderline"></View>

            <TextView
                android:text="@string/category"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_buypackage_category"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />
            <TextView
                android:text="@string/subcategory"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_buyandsell_buypackage_subcategory"
                android:spinnerMode="dialog"
                android:layout_margin="2dp"
                android:layout_weight="0.08" />

            <Button
                android:text="@string/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_buyandsell_buypackage_save"
                android:layout_weight="0.08" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>