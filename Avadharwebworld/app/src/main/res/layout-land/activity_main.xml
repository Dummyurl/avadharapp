<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/homebackground"
    tools:context="com.avadharwebworld.avadhar.Activity.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lv_scroll"
        >
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/sv_main_items">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_main_1"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView6"
                    android:layout_gravity="bottom" />

                <ImageButton
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/job"
                    android:id="@+id/ib_main_job" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="15dp"
                    android:textColor="@color/backgroundwhite"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/forgot_password"
                    android:id="@+id/t_forgot_password"
                    android:layout_below="@+id/btn_login"
                    android:layout_centerHorizontal="true" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="155dp"
                android:layout_height="27dp"
                android:id="@+id/ll_main_2"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:id="@+id/ib_main_social"
                    android:src="@drawable/globe"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/eshop"
                    android:id="@+id/ib_main_eshop" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/education"
                    android:id="@+id/ib_main_educaion" />

                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/matrimony"
                    android:id="@+id/ib_main_matrimonial" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:id="@+id/ll_main_3"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="160dp"
                    android:src="@drawable/realestate"
                    android:id="@+id/ib_main_realestate" />

                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/buyandsell"
                    android:id="@+id/ib_main_buyandsell" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:id="@+id/ll_main_4"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/hisstory1"
                    android:id="@+id/ib_main_hisstory" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:id="@+id/ll_main_5"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginRight="10dp"
                android:id="@+id/ib_main_pages1" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ib_main_pages" />
            </LinearLayout>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
            </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
